doctype html
head
  meta(charset='UTF-8')
  meta(name='viewport' content='width=device-width, initial-scale=1.0')
  title RIM AVAIATION GROUP/ONLINE FLIGHT BOOKING FORM
  link(href='https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css' rel='stylesheet' integrity='sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3' crossorigin='anonymous')
  link(rel='stylesheet' href='/css/main.css')
#header.row
  img(src='/images/Brand/Header.PNG' alt='')
.container
  form.flight-form(action='')
    .container
    .container(id='')
      .row
        .col
          h5(style='color: red; font-weight: 800;') PASSANGER INFORMATION
          label(for='') Full Name
          br
          input#fullname(type='text' placeholder='please insert full name' name='fullname')
          br
          label(for='') Gender
          br
          select#gender(name='gender')
            br
            option(value='') --select--
            option(value='male') Male
            option(value='female') Female
          br
          label(for='') Date of Birth
          br
          input#dateofbirth(type='date' name='date')
          br
          label(for='') Nationality
          br
          input#nationality(type='text' placeholder='please input nationality' name='nationality')
          br
        .col
          h5(style='color: red; font-weight: 800;') CONTACT INFORMATION
          label(for='') Phone Number
          br
          input#contact(type='text' placeholder='please input phone Number' name='contact')
          br
          label(for='') Email Address
          br
          input#email(type='text' placeholder='please input email' name='email')
          br
          label(for='') PO BOX Number
          br
          input#poboxnumber(type='text' placeholder='please input poboxnumber' name='poboxnumber')
          br
          label(for='') Emergency Phone Number
          br
          input#emergencycontact(type='text' placeholder='please input an Emergency contact' name='emergencycontact')
          br
        .col
          h5(style='color: red; font-weight: 800;') FLIGHT INFORMATION
          label(for='') Passport Number
          br
          input#passportnumber(type='text' placeholder='please input passportnumber' name='passportnumber')
          br
          label(for='') Visa Document
          br
          input#visa(type='file' placeholder='please input visa Document' name='visa')
          br
          label(for='') Departure City
          br
          input#departure(type='text' placeholder='please input departure city' name='departure')
          br
          label(for='') Destination City
          br
          input#destination(type='text' placeholder='please input arrival city' name='destination')
          br
    input.submit(type='submit' value='submit')
script(src='https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js' integrity='sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p' crossorigin='anonymous')
